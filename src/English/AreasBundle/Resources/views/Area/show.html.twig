{% extends 'EnglishAreasBundle:Area:layout.html.twig' %}
 
{% block body %}
<div class="row"><div class="cell"><a href="{{ path('area') }}">List</a></div></div> 
        <div class="row">
            <div class="cell">Id</div>
            <div class="cell">{{ entity.id }}</div>
        </div>
        <div class="row">
            <div class="cell">Area</div>
            <div class="cell">{{ entity.area }}</div>
        </div>

<div class="row"><div class="cell"><a href="{{ path('area_edit', { 'id': entity.id }) }}">Edit</a></div></div>   
<div class="row"><div class="cell"> 
    <form action="{{ path('area_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
    </form>
</div>
</div> 
    

{% endblock %}
