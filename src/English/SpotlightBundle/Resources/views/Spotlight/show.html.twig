 {% extends 'EnglishSpotlightBundle:Spotlight:layout.html.twig' %}
 
 {% block body %}

        <div class="row">
            <div class="cell">Id</div>
            <div class="cell">{{ entity.id }}</div>
        </div>
        <div class="row">
            <div class="cell">Photourl</div>
            <div class="cell">{{ entity.photoUrl }}</div>
        </div>
        <div class="row">
            <div class="cell">Title</div>
            <div class="cell">{{ entity.title }}</div>
        </div>
        <div class="row">
            <div class="cell">Description</div>
            <div class="cell">{{ entity.description }}</div>
        </div>
        <div class="row">
            <div class="cell">Type</div>
            <div class="cell">{{ entity.type }}</div>
        </div>

    
        <a href="{{ path('spotlight') }}">
            Back to the list
        </a>
    
    
        <a href="{{ path('spotlight_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    
    
        <form action="{{ path('spotlight_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    

{% endblock %}
