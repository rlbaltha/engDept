{% extends 'EnglishSpotlightBundle:Spotlight:layout.html.twig' %}
 
{% block body %}
<div class="row"><div class="cell"><a href="{{ path('spotlight') }}">List</a></div></div>


<div class="spotlight">
<div class="head">Spotlight</div>
<div class="photo_cell"><div class="photo"><img class="image" name="spotlight" alt="{{ entity.title }}" src="{{ entity.photoUrl }}"/></div></div>
<div class="cell red">{{ entity.title }}</div>
<div class="cell">{% autoescape false %}{{ entity.description }}{% endautoescape %}</div>
</div>


<div class="row"><div class="cell"><a href="{{ path('spotlight_edit', { 'id': entity.id }) }}">Edit</a></div></div>   
<div class="row"><div class="cell"> 
    <form action="{{ path('spotlight_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
    </form>
</div>
</div> 
{% endblock %}
