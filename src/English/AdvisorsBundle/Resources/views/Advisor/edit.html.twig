 {% extends 'EnglishAdvisorsBundle:Advisor:layout.html.twig' %}
 
 {% block body %}

<div class="row divider">
    <div class="cell"><a href="{{ path('advisor') }}">Return to List</a></div>   
</div>

<div class="row">
    <div class="cell">
        <form action="{{ path('advisor_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <button type="submit">Update</button>
        </form>
    </div>    
</div>



<div class="row">
<div id="delete{{entity.id}}" class="cell"> 
<button onclick="$('#confirm{{entity.id}}').toggle();$('#delete{{entity.id}}').toggle()" type="submit">Delete</button> 
</div>      
    
<div id="confirm{{entity.id}}" class="cell hidden">
    <div class="cell">
<form action="{{ path('advisor_delete', { 'id': entity.id }) }}" method="post">
{{ form_widget(delete_form) }} 
<button type="submit">Confirm Delete</button> 
</form>
</div>
<div class="cell">
<button onclick="$('#confirm{{entity.id}}').toggle();$('#delete{{entity.id}}').toggle()" type="submit">Cancel</button>    
</div>
</div> 
</div>


    
{% endblock %}
