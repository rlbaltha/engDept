{% extends 'EnglishAdvisorsBundle:Advisor:layout.html.twig' %}
 
{% block body %}


<div class="row"><div class="cell"><a href="{{ path('advisor_new') }}">New</a></div></div>


    {% for entity in entities %}
        <div class="row">
            <div class="cell bold">{{ entity.name }}</div>
            <div class="cell"><a href="{{ path('advisor_edit', { 'id': entity.id }) }}">Edit</a></div>
            <div class="cell"><a href="{{ path('major_findbyadvisor', { 'id': entity.id }) }}">List Advisees</a></div>
        </div>
    {% endfor %}
    

{% endblock %}
