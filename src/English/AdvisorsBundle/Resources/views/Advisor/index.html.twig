{% extends 'EnglishAdvisorsBundle::subnav.html.twig' %}

{% block content %}

    <div class="col-sm-offset-1 col-sm-10 well" style="background-color: #f5f5f5; height: 100vh">

        <table class="table table-striped">
            {% for advisor in advisors %}
                <tr>
                    <td>{{ advisor.name }}
                        <div class="btn-group pull-right">
                            <a class="btn btn-default" href="{{ path('major_findbyadvisor', { 'id': advisor.id }) }}">List Advisees</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="btn btn-default" href="{{ path('advisor_edit', { 'id': advisor.id }) }}">Update/Delete</a>
                            {% endif %}
                        </div>

                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}
