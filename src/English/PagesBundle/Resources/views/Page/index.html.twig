{% block content %}
        <table class="table table-striped">
            {% for page in pages %}
                <tr>
                    <td>{{ page.name }}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="pull-right" href="{{ path('pages_edit', { 'id': page.id }) }}">Update/Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
{% endblock %}
