{% extends 'EnglishLinksBundle::subnav.html.twig' %}

{% block content %}
        <dl>
            {% for link in links %}
                    <dd>
                        <a href="{{ link.url }}" title="{{ link.title}}" target="_blank">{{ link.title}}</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="pull-right" href="{{ path('link_edit', { 'id': link.id }) }}">Update/Delete</a>
                        {% endif %}
                    </dd>
            {% endfor %}
        </dl>
{% endblock %}

