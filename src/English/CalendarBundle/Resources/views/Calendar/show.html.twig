{% extends 'EnglishCalendarBundle:Calendar:layout.html.twig' %}
 
{% block body %}
<div class="row divider">
    <div class="cell"><a href="{{ path('calendar') }}">List Calendar Events</a></div>   
</div>

    <div class="row"><div class="cell">{{ entity.title }}</div></div>
    <div class="row"><div class="cell">{{ entity.date|date('M d, Y') }}</div></div>
    <div class="row"><div class="cell">{{ entity.time|date('h:i a') }}</div></div>
    <div class="row"><div class="cell">{{ entity.description|raw }}</div></div>

<div class="row divider"><div class="cell">    
<a href="{{ path('calendar_edit', { 'id': entity.id }) }}">Update/Delete</a>  
</div>


{% endblock %}
