{% extends 'EnglishCalendarBundle:Calendar:layout.html.twig' %}
 
{% block body %}
<div class="row"><div class="cell"><a href="{{ path('calendar') }}">List</a></div></div>
        <div class="row">
            <div class="cell">Id</div>
            <div class="cell">{{ entity.id }}</div>
        </div>
        <div class="row">
            <div class="cell">Date</div>
            <div class="cell">{{ entity.date|date('M d, Y') }}</div>
        </div>
        <div class="row">
            <div class="cell">Time</div>
            <div class="cell">{{ entity.time|date('H:i') }}</div>
        </div>
        <div class="row">
            <div class="cell">Title</div>
            <div class="cell">{{ entity.title }}</div>
        </div>
        <div class="row">
            <div class="cell">Description</div>
            <div class="cell">{{ entity.description }}</div>
        </div>
        <div class="row">
            <div class="cell">Username</div>
            <div class="cell">{{ entity.username }}</div>
        </div>

<div class="row"><div class="cell"><a href="{{ path('calendar_edit', { 'id': entity.id }) }}">Edit</a></div></div>   
<div class="row"><div class="cell"> 
    <form action="{{ path('calendar_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
    </form>
</div>
</div> 

{% endblock %}
