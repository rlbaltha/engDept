{% extends 'EnglishCalendarBundle:Calendar:layout.html.twig' %}
 
{% block javascripts %}
<script src="{{ asset('bundles/englishhome/js/ckeditor/ckeditor.js') }}"></script>
<script src="{{ asset('bundles/englishhome/js/ckeditor/adapters/jquery.js') }}"></script>
<script src="{{ asset('bundles/englishhome/js/jquery-ui-1.8.17.custom.min.js') }}"></script> 
<script src="{{ asset('bundles/englishhome/js/jquery-ui-timepicker-addon.js') }}"></script>
{% endblock %}
{% block stylesheets %}
<link type="text/css" rel="stylesheet" href="{{ asset('bundles/englishhome/css/smoothness/jquery-ui-1.8.17.custom.css') }}">
{% endblock %}

{% block body %}
<script language="javascript"> 
$(document).ready(function()
{
$('#english_calendarbundle_calendartype_description').ckeditor( function() {}, {height:150, skin: 'chris',forcePasteAsPlainText : true,
toolbar : [
['Bold','Italic','Underline','Font','FontSize','TextColor','BGColor','Link','Unlink','NumberedList',
'BulletedList','Outdent','Indent','Image','Table','Smiley','SpecialChar','RemoveFormat'],
],} );
$( '#english_calendarbundle_calendartype_date' ).datepicker({
showButtonPanel: true,
});
$( '#english_calendarbundle_calendartype_time' ).timepicker({
showButtonPanel: true,
ampm: true,
});
});
</script>

<div class="row"><div class="cell"><a href="{{ path('calendar') }}">List</a></div></div>

<div class="row"><div class="cell">
<form action="{{ path('calendar_create') }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>
</div></div>
{% endblock %}
