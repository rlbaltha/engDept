 {% extends 'EnglishCalendarBundle:Calendar:layout.html.twig' %}
 
 {% block body %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Time</th>
            <th>Title</th>
            <th>Description</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('calendar_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.time|date('H:i') }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description|raw }}</td>
            <td>{{ entity.username }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('calendar_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('calendar_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('calendar_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
