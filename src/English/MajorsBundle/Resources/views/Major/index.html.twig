 {% extends 'EnglishMajorsBundle:Major:layout.html.twig' %}
 
 {% block body %}

<div class="row_contrast divider">
    {% if is_granted('ROLE_ADVISORADMIN') %}
    {% include 'EnglishMajorsBundle:Major:nav.html.twig' %}
      <form action="{{ path('major_find') }}" method="post" {{ form_enctype(form) }}>
        <div class='cell right'>
        <div class="cell">
        {{ form_widget(form) }}
        </div>         
        <div class="cell">
        <button type="submit">Major Find</button>
        </div> 
        </div>        
     </form> 
    {% endif %}
</div>
<div class="row">
    <div class="cell width200 bold">
    Number found:  {{ entities|length }} 
    </div>
</div>

<div class="row">
    <div class="cell width200 bold">Name</div>
    <div class="cell width200 bold">Email</div>
    <div class="cell width75 bold">Advisor</div>
    <div class="cell width75 bold">Mentor</div>
    <div class="cell width100 bold">First Major</div>
    <div class="cell width100 bold">Second Major</div>
    <div class="cell width50 bold">Hours</div>
    <div class="cell width50 bold">GPA</div>
</div>

    {% for entity in entities %}
        <div class="row">
            <div class="cell bold width200">{% if entity.checkedin ==0 %}**{% endif %}<a href="{{ path('major_show', { 'id': entity.id }) }}">{{ entity.name }}</a></div>
            <div class="cell width200">{{ entity.email }}</div>
            <div class="cell width75">{{ entity.aName }}</div>
            <div class="cell width75">{{ entity.eName }}</div>
            <div class="cell width100">{{ entity.firstMajor }}</div>
            <div class="cell width100">{{ entity.secondMajor }}</div>
            <div class="cell width50">{{ entity.hours }}</div>
            <div class="cell width50">{{ entity.gpa }}</div>
        </div>
    {% endfor %}
    


{% endblock %}
