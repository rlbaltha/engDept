 {% extends 'EnglishMajornotesBundle:Majornote:layout.html.twig' %}
 
 {% block body %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Mentorid</th>
            <td>{{ entity.mentorId }}</td>
        </tr>
        <tr>
            <th>Mentor</th>
            <td>{{ entity.mentor }}</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>{{ entity.notes }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('majornote') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('majornote_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('majornote_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
