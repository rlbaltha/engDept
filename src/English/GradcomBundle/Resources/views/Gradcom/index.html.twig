{% extends 'EnglishGradcomBundle:Gradcom:layout.html.twig' %}
 
{% block body %}

    {% for entity in entities %}
        <div class="row">        
            <div class="cell">{{ entity.glastname }}</div>
            <div class="cell">{{ entity.flastname }}</div>
            <div class="cell">{% if entity.frole == 2 %}Chair{% endif %}</div>
            <div class="cell">
                <a href="{{ path('gradcom_show', { 'gid': entity.gid }) }}">Show Committee</a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
