 {% extends 'EnglishSlideshowBundle::subnav.html.twig' %}
 
{% block content %}
        <table class="table table-striped">
            {% for slide in slideshow %}
                <tr>
                    <td>

                        <p><img src="{{ slide.photoUrl }}"
                                alt="{{ slide.title }}"></p>

                        <strong>
                            {{ slide.title }}
                        </strong>

                        <p>{{ slide.description|raw }}</p>
                        <p>Order:  {{ slide.sortOrder }}</p>

                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="pull-right" href="{{ path('slideshow_edit', { 'id': slide.id }) }}">Update/Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
{% endblock %}