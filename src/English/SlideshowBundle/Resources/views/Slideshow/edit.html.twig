 {% extends 'EnglishSlideshowBundle:Slideshow:layout.html.twig' %}
 
 {% block body %}

<div class="row">
    <div class="cell"><a href="{{ path('slideshow') }}">List</a></div>   
</div>

<div class="row">
    <div class="cell">
        <form action="{{ path('slideshow_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <button type="submit">Edit</button>
        </form>
    </div>    
</div>

<div class="row">
    <div class="cell"> 
        <form action="{{ path('slideshow_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }} 
        <button type="submit">Delete</button> 
        </form>
    </div>
</div>

{% endblock %}
