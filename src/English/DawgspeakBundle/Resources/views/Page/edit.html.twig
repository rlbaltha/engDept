{% extends 'EnglishDawgspeakBundle:Def:layout.html.twig' %}
{% block javascripts %}
<script src="{{ asset('bundles/englishhome/js/ckeditor/ckeditor.js') }}"></script>
<script src="{{ asset('bundles/englishhome/js/ckeditor/adapters/jquery.js') }}"></script>
{% endblock %}  
{% block body %}
<script language="javascript"> 
$(document).ready(function()
{
$('#english_dawgspeakbundle_pagetype_body').ckeditor( function() {}, {height:600, width:600, skin: 'chris',forcePasteAsPlainText : true,
toolbar : [
['Format','Bold','Italic','Underline','TextColor','BGColor','Link','Unlink','NumberedList','JustifyLeft','JustifyCenter','JustifyRight','JustifyBlock',
'BulletedList','Outdent','Indent','Image','Table','Smiley','SpecialChar','RemoveFormat'],
],} );
});
</script>
<div class=''>
<form action="{{ path('page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Submit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('page') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('page_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
</div>
{% endblock %}

