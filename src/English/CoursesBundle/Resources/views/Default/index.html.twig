{% extends 'EnglishHomeBundle::layout.html.twig' %}


{% block content %}

    <div class="col-sm-offset-1 col-sm-10" style="background-color: #f5f5f5; height: 100vh">
        {% include 'EnglishCoursesBundle:Default:filter.html.twig' %}

        <table class="table table-striped">
            {% for courses in courses %}
                <tr id="course{{ courses.id }}">
                    <td><a id="detailLink{{ courses.id }}" href="javascript:void(0)" tabindex="1"
                                        title="Course Detail">{{ courses.courseName }}</a></td>
                    <td><strong>{{ courses.title }}</strong></td>
                    <td>{{ courses.instructorName|upper }}</td>
                    <td>{{ courses.callNumber }}</td>
                    <td>{{ courses.callNumber2 }}</td>
                    {% if courses.may == 1 %}
                        <td class="cell bold">Maymester</td>{% endif %}
                    <td>{{ courses.days }}</td>
                    <td>{{ courses.time }}</td>
                    <td>{{ courses.building }}</td>
                    <td>{{ courses.room }}</td>

                </tr>
            {% endfor %}

        </table>
    </div>

{% endblock %}