{% extends 'EnglishPublicationsBundle::subnav.html.twig' %}

{% block content %}

<div class="row divider">
<div class="cell">
<form action="{{ path('publications_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
{{ form_widget(edit_form) }}
<p>
<button type="submit">Update</button>
</p>
</form>
</div>
</div>

<div class="row">
        <div id="delete{{entity.id}}" class="cell"> 
        <button onclick="$('#confirm{{entity.id}}').toggle();$('#delete{{entity.id}}').toggle()" type="submit">Delete</button> 
        </div>
            
        <div id="confirm{{entity.id}}" class="cell hidden"> 
        <form action="{{ path('publications_delete', { 'id': entity.id}) }}" method="post">
        {{ form_widget(delete_form) }} 
        <button type="submit">Confirm Delete</button> 
        </form>
        <button onclick="$('#confirm{{entity.id}}').toggle();$('#delete{{entity.id}}').toggle()" type="submit">Cancel</button>         
        </div>  
</div> 

{% endblock %}
