{% extends 'EnglishPublicationsBundle:Publications:layout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/englishhome/js/ckeditor/ckeditor.js') }}"></script>
<script src="{{ asset('bundles/englishhome/js/ckeditor/adapters/jquery.js') }}"></script>
{% endblock %}

{% block body %}
<script language="javascript"> 
$(document).ready(function()
{
$('#english_publicationsbundle_publicationstype_description').ckeditor( function() {}, {height:150, skin: 'chris',forcePasteAsPlainText : true,
toolbar : [
['Bold','Italic','Underline','Font','FontSize','TextColor','BGColor','Link','Unlink','NumberedList',
'BulletedList','Outdent','Indent','Image','Table','Smiley','SpecialChar','RemoveFormat'],
],} );
});
</script>
<div class="row divider">
<div class="cell">
<a href="{{ path('publications') }}">List Publication Descriptions</a>
</div>
</div>

<div class="row divider">
<div class="cell">
<form action="{{ path('publications_create') }}" method="post" {{ form_enctype(form) }}>
{{ form_widget(form) }}
<p>
<button type="submit">Create</button>
</p>
</form>
</div>
</div>

{% endblock %}
