{% extends 'EnglishHomeBundle::layout.html.twig' %}

{% block content %}
    <div class="col-sm-offset-1 col-sm-10 well" style="background-color: #f5f5f5; height: 100vh">
            <h2 class="page-header" style="font-family: 'Lora', 'Times New Roman', 'serif';">Calendar</h2>


            {% for calendar in calendar %}
                {{ calendar.date|date("l, F d") }} {{ calendar.time|date("g:i A") }}
                <h3> {{ calendar.title }}</h3>
                <div class="">{% autoescape false %}{{ calendar.description }}{% endautoescape %}</div>
                <hr/>
            {% else %}
                <div class="">There are no events on our calendar this month.  Please check back.</div>
            {% endfor %}

    </div>
{% endblock %}
