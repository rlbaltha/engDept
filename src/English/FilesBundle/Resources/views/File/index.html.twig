{% extends 'EnglishFilesBundle::subnav.html.twig' %}

{% block content %}

    <div class="col-sm-offset-1 col-sm-10 well" style="background-color: #f5f5f5; height: 100vh">

        <table class="table table-striped">
            {% for file in files %}
                <tr>
                    <td><a title="{{ file.name }}" href="{{ path('file_view', { 'id': file.id }) }}">{{ file.name }}</a><br/>
                        {{ file.description }}
                        <div class="btn-group pull-right">
                            {% if is_granted('ROLE_SEARCHADMIN') %}<a href="{{ path('file_edit', { 'id': file.id }) }}">Edit/Delete</a>
                            {% endif %}
                        </div>

                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}


