{% extends 'EnglishFilesBundle::subnav.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function () {
            $('#english_filesbundle_filetype_file').on('change', function () {
                var filename = $('input[type=file]').val().replace(/C:\\fakepath\\/i, '');
                var file = filename.substr(0, filename.lastIndexOf('.')) || filename;
                $('#english_filesbundle_filetype_name').val(file);
                var a=(this.files[0].size/1024/1024);
                var filesize = Math.round(a * 100) / 100
                if(a > 10) {
                    alert('Your file is ' + filesize + ' MB.  It must be no larger than 10 MB.');
                };
            });
        });
    </script>
{% endblock %}


{% block content %}

        <form class="" action="#" method="post" {{ form_enctype(form) }} novalidate="novalidate">
            {{ form_widget(form) }}
            <button class="btn btn-default" type="submit">Upload</button>
        </form>

{% endblock %}
