{% extends 'EnglishHomeBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function () {
            $('#confirm').toggle();
        });
    </script>
{% endblock %}

{% block subnav %}

<!-- Static navbar -->
<div class="navbar navbar-default subnav" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#subnav">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="subnav" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a class="{% if app.request.get('type')==1 or 'area' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('directory_type', {'type': '1'}) }} "  title="Select directory type" >Faculty</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Areas <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        {% for area in areas %}
                            <li><a href="{{ path('directory_area', {'area': area.id}) }} "  title="Select area" >{{area.area}}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                <li><a class="{% if app.request.get('type')==2 %}active{% endif %}" href="{{ path('directory_type', {'type': '2'}) }} "  title="Select directory type" >Instructors</a></li>
                <li><a class="{% if app.request.get('type')==3 %}active{% endif %}" href="{{ path('directory_type', {'type': '3'}) }} "  title="Select directory type" >Administration</a></li>
                <li><a class="{% if app.request.get('type')==4 %}active{% endif %}" href="{{ path('directory_type', {'type': '4'}) }} "  title="Select directory type" >Graduate Students</a></li>
                <li><a class="{% if app.request.get('type')==5 %}active{% endif %}" href="{{ path('directory_type', {'type': '5'}) }} "  title="Select directory type" >Retired/Emeritus Faculty</a></li>
                {% if is_granted('ROLE_GRADADMIN') %}
                    <li><a class="{% if app.request.get('type')==6 %}active{% endif %}" title="Gradcom" href="{{ path('people_gradfac') }}">Graduate Faculty</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_GRADADMIN') %}
                <li><a href="{{ path('people_new') }}">New Listing</a></li>
                {% endif %}

            </ul>
                    <form class="navbar-form navbar-right hidden-sm" role="search" action="{{ path('directory') }}" method="post" {{ form_enctype(search_form) }}>
                        <div class="form-group">
                            {{ form_row(search_form.lastName) }}
                        </div>
                        <button type="submit" class="btn btn-default">Go</button>
                    </form>

        </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</div>

{% endblock %}

