{% extends 'EnglishHomeBundle::layout.html.twig' %}
 
 
{% block content %}

<div class="col-sm-offset-1 col-sm-10" style="background-color: #f5f5f5; height: 100vh">
    {% include 'EnglishPeopleBundle:Default:filter.html.twig' %}

    <table class="table table-striped">
        {% for people in people %}
            <tr id="listing{{ people.id }}">
                <td>
                    <a id="detailLink{{ people.id }}"  href="{{ path('directory_detail', { 'id': people.id }) }}" title="Detail">{{ people.firstName }} {{ people.lastName }}</a>
                     {{ people.title | raw }}
                    Email: <a href="mailto:{{ people.email }}" title="email address">{{ people.email }}</a>
                    Phone:
                    {{ people.officePhone }}
                    Office:
                    {{ people.officeNumber }}
                </td>
            </tr>
        {% endfor %}

    </table>
</div>

{% endblock %}
