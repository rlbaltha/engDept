{# engDept/app/Resources/views/base.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {% stylesheets '@bootstrap_less' combine=true  output='css/compiled/main.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/englishhome/css/local.css') }}">
        <link href='http://fonts.googleapis.com/css?family=Lora' rel='stylesheet' type='text/css'>
        {% endstylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% javascripts '@jquery_js' '@jqueryui_js' '@bootstrap_js' combine=true output='js/compiled/main.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}


</head>
<body>
<div class="col-sm-12" style="margin-top: 20px; padding:0px; ">
    <nav class="navbar navbar-default navbar-fixed-top" style="background-color: #f3f0dd;padding-right: 20px;">
        <div class="navbar-header col-sm-3">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a name="top"></a>
            <a class="navbar-brand" style="font-family: 'Lora', 'Times New Roman', 'serif';" href="{{ path('home') }}"
               title="English Department Homepage"><strong>English at University of Georgia</strong></a>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li id="skip" class="hidden">
                    <a href="#main_content">Skip Navigation</a>
                </li>
                <li><a title="People" href="{{ path('directory') }}">People</a></li>
                <li><a title="Courses" href="{{ path('listings') }}">Courses</a></li>
                <li><a title="Publications" href="{{ path('publications') }}">Publications</a></li>
                <li><a title="First Year Composition" href="/fyc/home.html">First Year Comp.</a></li>
                <li><a title="Undergraduate Studies in English" href="/undergrad/home.html">Undergraduate</a>
                </li>
                <li><a title="Graduate Studies in English" href="/grad/home.html">Graduate</a></li>
                <li><a title="Creative Writing" href="/cwp/home.html" target='_blank'>Creative Writing</a></li>
                <li><a title="Make a Gift" href="{{ path('donate') }}">Make a Gift</a></li>

            </ul>
            <ul class="nav navbar-nav navbar-right" id="account-dropdown">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li>
                        <a title="Logout" href="{{ path('fos_user_security_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li>
                        <a title="Login" href="{{ path('fos_user_security_login') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

    <div id="mainContainer">
        {{ block('subnav') }}


        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and block('sidebar') %}
            {% if 'fos_user' not in app.request.attributes.get('_route') %}
                <div class="col-sm-2 sidebar hidden-xs">
                    <ul class="nav nav-list">
                        {{ block('sidebar') }}
                    </ul>
                </div>
                <div class="col-xs-12 visible-xs sidebar-mobile">
                    <a id="main_content" name="main_content"></a>

                    <div class="panel panel-default">
                        <div class="panel-body">
                            <ul class="nav nav-list">
                                {{ block('sidebar') }}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div {% if 'fos_user' not in app.request.attributes.get('_route') %}
                class="col-sm-10"
            {% else %}
                class="col-sm-12"
            {% endif %} role="main" style="margin-bottom: 0px;padding-left: 0px; padding-right: 0px; background-color: #f3f0dd; height: 100%;">
                {% block content %}
                {% endblock %}
            </div>
        {% else %}
            <a id="main_content" name="main_content"></a>
            {% if 'home' in app.request.attributes.get('_route') %}
                <div class="col-sm-offset-1 col-sm-10 " style="padding:20px;margin-top: 50px;">

                    <div id="carousel-example-generic" class="carousel slide col-sm-12 center" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            {% for slide in slideshow %}
                                <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index }}"
                                    class="{% if loop.first %}active{% endif %}"></li>
                            {% endfor %}
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            {% for slide in slideshow %}
                                <div class="item {% if loop.first %}active{% endif %}">
                                    <div class="col-sm-6">
                                        <img src="{{ slide.photoUrl }}"
                                             alt="{{ slide.title }}">
                                    </div>
                                    <div class="col-sm-6">
                                        <h1 style="font-size: 32pt;font-family: 'Lora', 'Times New Roman', 'serif';font-weight: bold;">
                                            {{ slide.title }}
                                        </h1>

                                        <p>{{ slide.description }}
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                </div>
            {% endif %}
            <div class="col-sm-12 "
                 style="margin-bottom: 0px;padding-left: 0px; padding-right: 0px; background-color: #f3f0dd; height: 100%;">
                {{ block('content') }}
            </div>

        {% endif %}

    </div>
</div>

{# Modal #}
<div class="modal fade" id="base_modal" tabindex="-1" aria-labelledby="baseModalLabel" aria-hidden="true" role="dialog">

</div>
<!-- /.modal -->


</body>
</html>
