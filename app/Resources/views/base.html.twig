<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}English Department{% endblock %}</title>
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/englishhome/css/main.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/englishhome/css/uga.css') }}">
        <script src="{{ asset('bundles/englishhome/js/jquery-1.7.1.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        

        
    <div class="wrapper">    
        <div class="container">
            
            
        <div id="banner" class='banner'>
        <img title="English Dept. banner" alt="English Dept. banner" src="{{ asset('bundles/englishhome/images/EnglishHeader.jpg') }}">
        </div>
                
        <div class="main_nav">
        <div class="cell"><a title="Home" href="{{ path('home') }}" >Home</a></div>
        <div class="cell"><a title="People" href="{{ path('directory') }}" >People</a></div>
        <div class="cell"><a title="Courses" href="{{ path('listings') }}" >Courses</a></div>
        <div class="cell"><a title="Publications" href="{{ path('publications') }}" >Publications</a></div>
        <div class="cell"><a title="First Year Composition" href="/fyc/home.html">First Year Comp.</a></div>
        <div class="cell"><a title="Undergraduate Studies in English" href="/undergrad/home.html">Undergraduate</a></div>
        <div class="cell"><a title="Graduate Studies in English" href="/grad/home.html" >Graduate</a></div>
        <div class="cell"><a title="Creative Writing" href="/cwp/home.html" target='_blank' >Creative Writing</a></div>
        <div class="cell"><a title="Make a Gift" href="{{ path('donate') }}" >Make a Gift</a></div>
        <div class="cell">
        
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <a class='last' title="Logout" href="{{ path('fos_user_security_logout') }}">Logout</a>
        {% else %}
        <a class='last' title="Login" href="{{ path('fos_user_security_login') }}">Login</a>
        {% endif %}
        
        </div>
        </div>                   

        {% if is_granted('ROLE_ADMIN') %}
        <div class="row_contrast">      
        <div class="cell">Admin</div>            
        <div class="cell"><a title="Areas" href="{{ path('area') }}" >Areas</a></div>
        <div class="cell"><a title="Positions" href="{{ path('position') }}" >Positions</a></div>
        <div class="cell"><a title="Calendar" href="{{ path('calendar') }}" >Calendar</a></div>
        <div class="cell"><a title="Courses" href="{{ path('course') }}" >Courses</a></div>
        <div class="cell"><a title="People" href="{{ path('people') }}" >People</a></div>
        <div class="cell"><a title="Slideshow" href="{{ path('slideshow') }}" >Slideshow</a></div>
        <div class="cell"><a title="Spotlight" href="{{ path('spotlight') }}" >Spotlight</a></div>
        <div class="cell"><a title="Term" href="{{ path('term') }}" >Term</a></div>
        <div class="cell"><a title="Publications" href="{{ path('publications') }}" >Publications</a></div>
        <div class="cell"><a title="Make a Gift" href="{{ path('donate') }}" >Make a Gift</a></div>
        </div>
        {% endif %}
                
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}      
        <div class="row_contrast">        
        <div class="cell"><a class='last' title="Logout" href="{{ path('fos_user_change_password') }}">Change Password</a></div>
        <div class="cell"><a title="Profile" href="{{ path('people') }}" >Profile</a></div>        
        <div class="cell"><a title="Courses" href="{{ path('course') }}" >Courses</a></div>
        {% if is_granted('ROLE_ADVISOR') %} 
        <div class="cell"><a title="Majors" href="{{ path('major') }}" >Majors</a></div>
        {% endif %}
        <div class="cell"><a title="Calendar" href="{{ path('calendar') }}" >Calendar</a></div>
        <div class="cell"><a title="Links" href="{{ path('link') }}" >Dept. Links</a></div> 
        <div class="cell"><a title="Help" href="{{ path('help') }}" >Help</a></div> 
        {% if is_granted('ROLE_GRADFAC') or is_granted('ROLE_GRADADMIN')  %}         
        <div class="cell"><a title="Graduate Students" href="{{ path('people_grad') }}" >All Grad Students</a></div>
        {% endif %} 
        {% if is_granted('ROLE_GRADFAC') %}
        <div class="cell"><a title="Graduate Students" href="{{ path('people_mygrad') }}" >My Grad Students</a></div> 
        {% endif %}
        {% if is_granted('ROLE_GRADADMIN') %}
        <div class="cell"><a title="Gradcom" href="{{ path('people_gradfac') }}" >Grad Faculty</a></div>
        {% endif %}      
        {% if is_granted('ROLE_ADVISORADMIN') %} 
        <div class="cell"><a title="Advising" href="{{ path('major') }}" >Majors</a></div>            
        {% endif %}
        </div> 
        {% endif %}        
        {% block body %}{% endblock %}      
                
        
        <div class="footer">
        <div class="cell">
        The Department of English | Franklin College of Arts &amp; Sciences | University of Georgia<br>
        254 Park Hall, Athens, Georgia, 30602-6205 | Phone: 706.542.1261 | Fax:  706.542.2181
        </div>
        </div>
        </div>
     </div>        
    </body>
</html>
